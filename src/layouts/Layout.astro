---
import Header from '../components/Header.astro';

interface Props{
	title: string;
	description?: string;
	image?: string;
}

const { title = "ITT", description = "TEST",image} = Astro.props;
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<Header />
			<slot />
		</div>
		<script src="https://kit.fontawesome.com/c86a35ea26.js" crossorigin="anonymous"></script>
	</body>
</html>